{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "web/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/index.js" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "web/dist/index.html" }
  ],
  "build": {
    "env": {
      "VITE_API_URL": "https://investa-eight.vercel.app"
    }
  },
  "outputDirectory": "web/dist"
}
